<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FreeFood_Project.CompanyPages.PropertiesCompanyPage"
             Title="PropertiesCompanyPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource BackGroundFreeFood}"
             xmlns:viewmodel="clr-namespace:FreeFood_Project.ViewModel"
             x:DataType="viewmodel:PropertiesCompanyViewModel">
    
    <VerticalStackLayout>
        <Label Text="Свойства" TextColor="Black" HorizontalOptions="Center" FontSize="40" Margin="20"/>

        <Button Text="Добавить бокс" 
                TextColor="Black" 
                Margin="20"
                FontSize="20"
                BackgroundColor="{StaticResource PirmaryFreeFood}"
                Command="{Binding GoToAddBoxPageCommand}"/>
        
        <Button Text="Настройки" 
                TextColor="Black" 
                Margin="20"
                FontSize="20"/>

        <Button Text="Продажи" 
                TextColor="Black" 
                Margin="20" 
                FontSize="20"/>

        <Button Text="Помощь" 
                TextColor="Black" 
                Margin="20"
                FontSize="20"/>

    </VerticalStackLayout>
</ContentPage>