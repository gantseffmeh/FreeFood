<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FreeFood_Project.UserPages.ProfileUserPage"
             Title="ProfileUserPage"
             xmlns:viewmodel="clr-namespace:FreeFood_Project.ViewModel"
             x:DataType="viewmodel:ProfileUserViewModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="White">

    <VerticalStackLayout>
        <Label Text="Профиль" TextColor="Black" HorizontalOptions="Center" FontSize="40" Margin="20"/>
        <Button Text="Настройки" 
                TextColor="Black" 
                Margin="20"
                FontSize="15" 
                Command="{Binding GoToSettingsUserPageCommand}"/>
        
        <Button Text="Зарегестрировать магазин" 
                TextColor="Black" 
                Margin="20" 
                FontSize="15"/>
        
        <Button Text="О нас" 
                TextColor="Black" 
                Margin="20"
                FontSize="15"
                Command="{Binding GoToAboutPageCommand}"/>
        

    </VerticalStackLayout>
</ContentPage>